            android:visibility="invisible"/>

        <ImageView
            android:id="@+id/ahorcado2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="40dp"
            app:srcCompat="@drawable/ahorcado2"
            android:visibility="invisible"/>

        <ImageView
            android:id="@+id/ahorcado3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="40dp"
            app:srcCompat="@drawable/ahorcado3"
            android:visibility="invisible"/>

        <ImageView
            android:id="@+id/ahorcado4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="40dp"
